---
import { Image } from "astro:assets"
import { ArrowUpRightIcon } from "lucide-react"

interface Props {
  href: string
  logo: string
  title: string
  username: string
}

const { href, logo, title, username } = Astro.props
---

<a
  href={href}
  target="_blank"
  class="flex items-center gap-4 py-4 group hover:bg-secondary/15 transition-colors duration-300 rounded-lg p-4 border border-secondary"
>
  <Image src={logo} alt={title} width={48} height={48} class="rounded-lg" />

  <div class="flex flex-col">
    <span class="font-medium">{title}</span>
    <span class="text-xs text-muted-foreground">{username}</span>
  </div>
  <div class="flex-1"></div>
  <ArrowUpRightIcon
    className="size-4 group-hover:rotate-45 transition-transform duration-300"
  />
</a>
