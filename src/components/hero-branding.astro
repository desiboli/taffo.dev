---
import { Image } from "astro:assets"
---

<div
  class="min-h-fit w-full bg-background rounded-2xl overflow-hidden relative p-4"
>
  {/* Diagonal Stripes Background */}
  <div
    class="absolute inset-0 z-0"
    style={{
      backgroundImage:
        "repeating-linear-gradient(45deg, transparent, transparent 2px, var(--color-secondary) 2px, var(--color-secondary) 4px)",
    }}
  >
  </div>
  <div class="flex items-center justify-center py-20 gap-2 relative">
    <div
      class="absolute inset-0 dark:bg-[radial-gradient(var(--edge)_1px,transparent_2px_50%)] bg-[radial-gradient(var(--edge)_1px,transparent_2px_50%)] bg-size-[8px_8px] z-0"
    >
    </div>
    <div
      class="h-40 w-20 bg-black dark:bg-white rounded-full z-0 relative overflow-hidden"
    >
      <div
        class="absolute inset-0 z-0"
        style={{
          backgroundImage:
            "repeating-linear-gradient(135deg, transparent, transparent 2px, var(--color-secondary) 2px, var(--color-secondary) 4px)",
        }}
      >
      </div>
    </div>
    <div
      class="h-40 w-20 bg-black dark:bg-white rounded-full z-0 relative overflow-hidden"
    >
      <div
        class="absolute inset-0 z-0"
        style={{
          backgroundImage:
            "repeating-linear-gradient(135deg, transparent, transparent 2px, var(--color-secondary) 2px, var(--color-secondary) 4px)",
        }}
      >
      </div>
    </div>
    <div
      class="h-40 w-20 dark:bg-zinc-700 bg-zinc-300 rounded-[0_5rem_1rem_2rem] z-0 relative overflow-hidden"
    >
      <div
        class="absolute inset-0 z-0"
        style={{
          backgroundImage:
            "repeating-linear-gradient(135deg, transparent, transparent 2px, var(--color-secondary) 2px, var(--color-secondary) 4px)",
        }}
      >
      </div>
    </div>

    <div class="absolute left-0 bottom-0">
      <div class="relative size-20 lg:size-32 shrink-0">
        <Image
          alt="Mustafa Alshammaa"
          src="/m.webp"
          width={128}
          height={128}
          class="rounded-full object-cover w-full h-full"
        />
        <div
          class="pointer-events-none absolute inset-0 rounded-full ring-2 ring-black/10 ring-inset dark:ring-white/10"
        >
        </div>
      </div>
    </div>
  </div>
</div>
