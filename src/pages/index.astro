---
import { Image } from "astro:assets"
import BriccoLogo from "@/assets/bricco.svg"
import DigitalistLogo from "@/assets/digitalist.webp"
import DinboxLogo from "@/assets/dinbox.webp"
import PluckLogo from "@/assets/pluckmarket_logo.webp"
import RCOLogo from "@/assets/rco.svg"
import RiverLogo from "@/assets/river_cresco_logo.webp"
import StellarLogo from "@/assets/stellar.svg"
import SVTLogo from "@/assets/svt.svg"
// Full Astro Component Syntax:
// https://docs.astro.build/basics/astro-components/
import AppHeader from "@/components/app-header.astro"
import { ClientsCarousel } from "@/components/clients-carousel"
import HeroBranding from "@/components/hero-branding.astro"
import SocialLinkCard from "@/components/social-link-card.astro"
import { TestimonialCarousel } from "@/components/testimonial-carousel"
import DefaultLayout from "@/layouts/default-layout.astro"
---

<script is:inline>
  const updateTheme = () => {
    const wcb = document.getElementById("wcb")
    wcb?.classList.toggle(
      "wcb-d",
      document.documentElement.classList.contains("dark")
    )
  }

  const init = () => {
    if (document.getElementById("wcb")) {
      updateTheme()
      new MutationObserver(updateTheme).observe(document.documentElement, {
        attributes: true,
        attributeFilter: ["class"],
      })
    } else {
      setTimeout(init, 100)
    }
  }

  init()
</script>

<DefaultLayout>
  <AppHeader />

  <main class="mt-10 mb-20">
    <section class="max-w-5xl mx-auto space-y-4 px-4">
      <HeroBranding />
      <h1 class="text-2xl md:text-3xl font-bold leading-snug text-justify">
        Hi, I'm Mustafa a Senior Frontend Developer with over a decade of
        experience building fast, responsive, and reliable web interfaces. I
        have a solid foundation in frontend development, with a touch of design
        expertise and a keen eye for UX/UI to ensure every detail feels just
        right. When I'm not coding, I'm usually exploring the latest in web tech
        or enjoying time with family — but always ready for the next big
        challenge!
      </h1>

      <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
        <SocialLinkCard
          href="https://www.linkedin.com/in/mustafa-alshammaa/"
          logo="https://cdn.brandfetch.io/idJFz6sAsl/w/48/h/48/theme/dark/icon.png?c=1bxid64Mup7aczewSAYMX&t=1748592533197"
          title="LinkedIn"
          username="mustafa-alshammaa"
        />
        <SocialLinkCard
          href="https://github.com/desiboli"
          logo="https://cdn.brandfetch.io/idZAyF9rlg/w/48/h/48/theme/dark/icon.png?c=1bxid64Mup7aczewSAYMX&t=1719469970995"
