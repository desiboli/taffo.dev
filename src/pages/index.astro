---
// Full Astro Component Syntax:
// https://docs.astro.build/basics/astro-components/
import AboutIntro from "@/components/about-intro.astro"
import AppHeader from "@/components/app-header.astro"
import HeroBranding from "@/components/hero-branding.astro"
import SocialLinkCard from "@/components/social-link-card.astro"
import { TestimonialCarousel } from "@/components/testimonial-carousel"
import DefaultLayout from "@/layouts/default-layout.astro"
---

<DefaultLayout>
  <AppHeader />
  <main class="mt-10 mb-20">
    <div class="max-w-5xl mx-auto space-y-4 px-4">
      <HeroBranding />
      <AboutIntro />

      <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
        <SocialLinkCard
          href="https://www.linkedin.com/in/mustafa-alshammaa/"
          logo="https://cdn.brandfetch.io/idJFz6sAsl/w/400/h/400/theme/dark/icon.png?c=1bxid64Mup7aczewSAYMX&t=1748592533197"
          title="LinkedIn"
          username="mustafa-alshammaa"
        />
        <SocialLinkCard
          href="https://github.com/desiboli"
          logo="https://cdn.brandfetch.io/idZAyF9rlg/w/400/h/400/theme/dark/icon.png?c=1bxid64Mup7aczewSAYMX&t=1719469970995"
          title="GitHub"
          username="desiboli"
        />
        <SocialLinkCard
          href="https://app.daily.dev/desiboli"
          logo="https://cdn.brandfetch.io/idDVDWwMN7/w/256/h/256/theme/dark/icon.png?c=1bxid64Mup7aczewSAYMX&t=1757054862144"
          title="Daily.dev"
          username="desiboli"
        />
        <SocialLinkCard
          href="https://x.com/adamalshammaa"
          logo="https://cdn.brandfetch.io/idS5WhqBbM/w/400/h/400/theme/dark/icon.jpeg?c=1bxid64Mup7aczewSAYMX&t=1692089091886"
          title="X"
          username="adamalshammaa"
        />
      </div>
    </div>

    <div class="max-w-5xl mx-auto space-y-4 px-4 mt-20 mb-4">
      <h2 class="text-2xl font-medium text-center text-muted-foreground">
        What people say about me
      </h2>
    </div>
    <div class="w-full mx-auto">
      <TestimonialCarousel client:load />
    </div>
  </main>
  <footer class="my-20">
    <div class="max-w-5xl mx-auto px-4">
      <p class="text-center text-sm text-muted-foreground">
        &copy; {new Date().getFullYear()} Mustafa Alshammaa. All rights reserved.
      </p>
    </div>
  </footer>
</DefaultLayout>
